            <input type="text" placeholder="Name" value="<%= Product.name %> " name="Pname" required>
            <input type="number" placeholder="Quantity" value="<%= Product.Quantity %>" name="Quantity" required>
            <input type="text" placeholder="Price" value="<%= Product.price %> " name="price" required>
    
            <input type="submit" value="continue">
        </form>
    </div>
